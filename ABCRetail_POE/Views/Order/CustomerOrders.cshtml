@model List<ClassLibrary.Models.Order>
@{
    ViewData["Title"] = "My Order History";
}

<h2 class="text-success">My Order History</h2>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        You have no orders yet. <a asp-controller="Product" asp-action="Index">Continue Shopping</a>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Order Reference</th>
                <th>Product ID</th>
                <th>Quantity</th>
                <th>Total Paid</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderByDescending(o => o.Timestamp))
            {
                <tr>
                    <td>@item.Timestamp?.LocalDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.RowKey?.Substring(0, 8)...</td> @* Display short GUID reference *@
                    <td>@item.ProductID</td>
                    <td>@item.Quantity</td>
                    <td>R @item.TotalAmount.ToString("N2")</td>
                    <td>
                        <span class="badge bg-secondary">@item.Status</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Back to Shopping
    </a>
</div>