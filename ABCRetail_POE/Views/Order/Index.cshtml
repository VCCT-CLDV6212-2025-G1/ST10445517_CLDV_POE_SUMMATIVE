@model IEnumerable<ClassLibrary.Models.Order>

@{
    ViewData["Title"] = "Order Management";
    // Define the list of available statuses for the dropdown
    var statusOptions = new List<string> { "PENDING", "PROCESSING", "SHIPPED", "DELIVERED", "CANCELED" };
}

<h1>Order Management</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="CreateOrder" class="btn btn-primary">Create New Order</a>
</p>
<div class="mt-4">
    <a asp-controller="AdminDashBoard" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back To Dashboard
    </a>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderId)</th>
            <th>@Html.DisplayNameFor(model => model.CustomerID)</th>
            <th>@Html.DisplayNameFor(model => model.ProductID)</th>
            <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Timestamp)</th>

            <th>@Html.DisplayNameFor(model => model.Status)</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerID)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductID)</td>
                <td>R @Html.DisplayFor(modelItem => item.TotalAmount)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Timestamp)</td>

                <td>
                    <form asp-action="UpdateStatus" method="post" class="d-flex">
                        <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@item.RowKey" />

                        <select name="newStatus" class="form-select form-select-sm me-2" style="width:140px;">
                            @foreach (var status in statusOptions)
                            {
                                <option value="@status" selected="@(item.Status == status)">
                                    @status
                                </option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-warning" title="Update Status">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </form>
                </td>

                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@item.RowKey" />
                        <button type="submit" class=" btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>